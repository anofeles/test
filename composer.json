{
    "name": "herd/herd",
    "description": "The Laravel Based CMS System.",
    "keywords": ["herd","herdCMS","framework", "laravel"],
    "license": "NONE",

    "require":{
        "php": "^7.1.3",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "dimsav/laravel-translatable": "^9.2",
        "fideloper/proxy": "~4.0",
        "intervention/image": "^2.4",
        "laravel/framework": "5.7.*",
        "laravel/tinker": "^1.0",
        "spatie/db-dumper": "^2.12",
        "spatie/laravel-permission": "^2.29",
        "webpatser/laravel-uuid": "^3.0"
    },
    "autoload": {
        "files":[
            "herdCMS/Core/Helpers/helper.php"
        ],
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "HerdCMS\\": "HerdCMS/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php herd key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php herd package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }

}
